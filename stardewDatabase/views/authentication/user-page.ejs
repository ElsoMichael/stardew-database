<div class="container">
  <div class="row">
    
    <!-- User Name -->
    <h1 class="moreSpace text-center"><%= user.username %></h1>

      <!-- Form For Adding User Game -->
      <h3 class="text-center">Games</h3>

      <div class="col-lg-12">
        <form action="/infoGame" method="post">
          <div class="form-group">

            <br>
            <!-- User's Game Title -->
            <label for="Title">Game Title</label>
            <input type="text" class="form-control" name="title" placeholder="Space Invader">

            <br>
            <!-- User's Game Link -->
            <label for="Link">Link To Your Game</label>
            <input type="text" class="form-control" name="link" placeholder="https://elsomichael.github.io/spaceInvader-project1/k">

            <br>
            <!-- User's Game Summary -->
            <label for="Summary">Summary</label>
            <textarea type="text" class="form-control" name="summary" placeholder="About your Game" rows="6"></textarea>

            <br>
            <!-- User's Game Name -->
            <label for="Author">Author</label>
            <input type="text" class="form-control" name="author" placeholder="Michael">

            <br>
            <!-- User's Game Webpage Optional -->
            <label for="Platform">Link to Github or Linkedin (Optional)</label>
            <input type="text" class="form-control" name="platform" placeholder="https://github.com/ElsoMichael">
          </div>

          <button type="submit" class="btn btn-default" value="Add Game">Add Game</button>

        </form>
      </div>
      
  </div>
</div>
