<!-- Edit User Game Form -->
<h1 class="moreSpace text-center">Edit</h1>

<div class="col-md-12">

  <form action="/<%=info._id%>" method="post">
    <div class="form-group">

      <br>
      <!-- User Game Title Edit -->
      <label for="Title">Game Title</label>
      <input type="text" class="form-control" name="title" placeholder="Space Invader" value="<%= info.title %>">

      <br>
      <!-- User Game Link Edit -->
      <label for="Link">Link To Your Game</label>
      <input type="text" class="form-control" name="link" placeholder="https://elsomichael.github.io/spaceInvader-project1/" value="<%= info.link %>">

      <br>
      <!-- User Game Summary Edit -->
      <label for="Summary">Summary</label>
      <input type="text" class="form-control" name="summary" placeholder="About your Game" row="6" value="<%= info.summary %>">

      <br>
      <!-- User Game Name Edit -->
      <label for="Author">Author</label>
      <input type="text" class="form-control" name="author" placeholder="Michael" value="<%= info.author %>">

      <br>
      <!-- User Game Website Edit -->
      <label for="Platform">Link to Github or Linkedin (Optional)</label>
      <input type="text" class="form-control" name="platform"  placeholder="https://github.com/ElsoMichael" value="<%= info.platform %>">
    </div>

    <button type="submit" class="btn btn-default" value="Save">Save</button>

  </form>
</div>